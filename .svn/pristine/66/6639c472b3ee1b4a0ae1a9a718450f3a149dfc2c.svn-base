/* alto del footer para que no quede detras de los botones */
body {
	padding-bottom: 50px;
}
/* color de opción de menú seleccionada */
.nav-pills .nav-link.active {
	background-color: lightgrey;
}
.alert-aval {
	position: relative;
    top: 0;
    left: 0;
	width: auto;
	height: auto;
    margin: 0 auto;
    opacity: 0.8;
    z-index: 9999;
    padding: 4px;
}