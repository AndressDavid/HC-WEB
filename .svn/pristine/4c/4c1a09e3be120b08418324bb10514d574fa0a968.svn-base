.form-top { overflow: hidden; background: #fff; }
.form-top-left { float: left; width: 75%; }
.form-top-right { float: left; width: 25%; text-align: right; }
.form-bottom { background: #eee; border: 4px solid #fff; }
.form-bottom form .input-error { border-color: #dc3545; }
input[type="text"], input[type="password"]{ border: 3px solid #ddd;}
input[type="text"]:focus, input[type="password"]:focus {border: 3px solid #ccc;}