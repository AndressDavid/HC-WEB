<form id="FormOrdMedOxigenoGlucometrias" name="FormOrdMedOxigenoGlucometrias" novalidate="validate">
	<div>
		<div class="row">
			<div class="col">
				<div class="row pb-2">
					<div class="input-group">				
						<div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-5">
							<label id="lblOrdOxiPacNececesita" for="selOrdOxiPacNececesita">El paciente necesita oxígeno?: </label>
						</div>
						
						<div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3">
							<select id="selOrdOxiPacNececesita" name="OrdOxiPacNececesita" class="custom-select" required>
								<option></option> <option>Si</option><option>No</option>
							</select>
						</div>
						
						<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-4">
							<div class="custom-control custom-checkbox custom-control-inline">
								<input type="checkbox" class="custom-control-input" id="chkSuspenderOxigeno" name="SuspenderOxigeno" value="1">
								<label class="custom-control-label" for="chkSuspenderOxigeno">Suspender Oxígeno</label>
							</div>
						</div>
					</div>
				</div>
		
				<div class="row pb-2">
					<div class="input-group">
						<div id="texOxigenoBl" class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10 alert alert-light" role="alert"> &nbsp; </div>
					</div>
				</div>
				
				<div class="row pb-2">
					<div class="input-group">				
						<div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
							<label id="lblTipoMetodoOxigeno" for="selTipoMetodoOxigeno">Método:</label>
						</div>

						<div class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10">
							<select id="selTipoMetodoOxigeno" name="TipoMetodoOxigeno" class="custom-select" disabled>
							<option value=""></option>
							</select>
						</div>
					</div>
				</div>
				
				<div class="row pb-2">
					<div class="input-group">				
						<div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
							<label id="lblDosisOxigeno" for="txtDosisOxigeno">Dosis:</label>
						</div>

						<div class="col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
							<input name="DosisOxigeno" type="number" id="txtDosisOxigeno" placeholder="" class="form-control" value=""  min="1" max="60" disabled required>
						</div>
						
						<div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4 row g-3 align-items-center">
							<span id="lblDosisOxigenoEtiq" class="form-text"> L/min por 24 horas </span>
						</div>
					</div>
				</div>
			
				<div class="row pb-2">	
					<div class="input-group">						
						<div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
							<label id="lblObservacionesOxigeno" for="txtObservacionesOxigeno">Observación:</label>
						</div>
						<div class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10">
							<textarea type="text" name="ObservacionesOxigeno" class="form-control" id="txtObservacionesOxigeno" rows="8" maxlength="200" disabled></textarea>
						</div>
					</div>
				</div>
			</div>
			
			<div class="col">
				<div class="row pb-2">
					<div class="input-group">				
						<div class="col-12 col-sm-12 col-md-12 col-lg-9 col-xl-7">
							<label id="lblNecesarioGlucometria" for="selNecesarioGlucometria">Es necesario tomar glucometrias al paciente?: </label>
						</div>
						
						<div class="col-12 col-sm-12 col-md-12 col-lg-3 col-xl-3">
							<select id="selNecesarioGlucometria" name="NecesarioGlucometria" class="custom-select" required>
								<option></option> <option>Si</option><option>No</option>
							</select>
						</div>
					</div>
				</div>
				
				<div class="row pb-1">
					<div class="input-group">
						<div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
							<label id="lblAlertaGlucometria"> </label>
						</div>
						<div id="textoAlertaGlucometria" style="text-align: center; font-size: 16px;" class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10 alert alert-light text-dark" role="alert"></div>
					</div>
				</div>
		
				<div class="row pb-1">
					<div class="input-group">				
						<div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
							<label id="lblTipoMetodoGlucometria" for="selTipoMetodoGlucometria">Método: </label>
						</div>

						<div class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10">
							<select id="selTipoMetodoGlucometria" name="TipoMetodoGlucometria" class="custom-select" required>
							<option value=""></option>
							</select>
						</div>
					</div>
				</div>
				
				<div class="row pb-2">
					<div class="input-group">
						<div id="texGlucometriaBl" class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10 alert alert-light" role="alert"></div>
					</div>
				</div>
				
				<div class="row pb-2">	
					<div class="input-group">						
						<div class="col-12 col-sm-12 col-md-12 col-lg-2 col-xl-2">
							<label id="lblObservacionesGlucometria" for="txtObservacionesGlucometria">Observación: </label>
						</div>
						<div class="col-12 col-sm-12 col-md-12 col-lg-10 col-xl-10">
							<textarea class="form-control" id="txtObservacionesGlucometria" name="ObservacionesGlucometria" rows="8" disabled></textarea>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>		
<script type="text/javascript" src="vista-ordenes-medicas/js/ordenes_oxigeno_glucomeria.js"></script>
